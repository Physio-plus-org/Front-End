<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="637dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-2dp">

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="57dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/physio_logo_1_" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="76dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/calendar" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="68dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/person" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/_682091152593" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="364dp"
            android:background="@drawable/top_background_gradiunt"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
            <!-- app:layout_gravity="center_horizontal"-->


            <TextView
                android:id="@+id/loginTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Δημιουργία "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ασθενή"
                android:textAlignment="center"
                android:textColor="#008563"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/pedio"
                android:backgroundTintMode="add"
                android:drawableLeft="@drawable/account"
                android:drawablePadding="8dp"
                android:padding="8sp"
                android:text="Ονοματεπώνυμο"
                android:textColor="#707070" />

            <EditText
                android:id="@+id/akma"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/pedio"
                android:backgroundTintMode="add"
                android:drawableLeft="@drawable/amka"
                android:drawablePadding="8dp"
                android:padding="8sp"
                android:text="ΑΜΚΑ"
                android:textColor="#707070" />

            <EditText
                android:id="@+id/adress"
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/pedio"
                android:backgroundTintMode="add"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="8dp"
                android:padding="8sp"
                android:text="Διεύθυνση"
                android:textColor="#707070" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="411dp"
            android:layout_height="63dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:backgroundTint="#008563"
                app:srcCompat="@drawable/cancel" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:backgroundTint="#008563"
                app:srcCompat="@drawable/save" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
