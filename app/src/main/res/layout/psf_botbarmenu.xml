<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/text_color"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/physiocenter_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@drawable/round_footer_button"
            android:backgroundTint="@color/backgroundColor"
            android:contentDescription="@string/physio_center_button"
            android:src="@drawable/baseline_local_hospital_24"
            android:title=""></ImageView>


        <View
            android:id="@+id/margin2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7" />

        <ImageView
            android:id="@+id/physio_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="@drawable/round_footer_button"
            android:backgroundTint="@color/backgroundColor"
            android:contentDescription="@string/add_kneading_button"
            android:src="@drawable/baseline_sports_gymnastics_24"
            android:title=""></ImageView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>