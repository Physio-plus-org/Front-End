<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".R9.R9">

    <include layout="@layout/psf_topbarmenu"></include>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="414dp"
        android:layout_height="467dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825"
        app:srcCompat="@drawable/r9_petr_magera_qxe8nptjwag_unsplash1"
        android:contentDescription="@string/basic_image" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="415dp"
        android:layout_height="407dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/r9_roundly_background"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/requestLabelId"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="279dp"
            android:text="@string/requestLabel"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/requestLabelId2"
            android:layout_width="139dp"
            android:layout_height="51dp"
            android:layout_above="@+id/dayLabelId"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="171dp"
            android:layout_marginBottom="0dp"
            android:text="@string/request_2_Label"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayLabelId"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/requestLabelId"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="252dp"
            android:text="@string/dayLabel"
            android:textSize="18sp"
            android:textStyle="bold" />


        <!--        <Button-->
        <!--            android:id="@+id/buttonNext"-->
        <!--            android:layout_width="127dp"-->
        <!--            android:layout_height="63dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:layout_marginTop="6dp"-->
        <!--            android:layout_marginEnd="8dp"-->
        <!--            android:layout_marginBottom="13dp"-->
        <!--            android:backgroundTint="@color/orange"-->
        <!--            android:text="@string/nextButton" />-->

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/dayLabelId"
            android:layout_marginTop="63dp"
            android:background="@color/R1_backgroundColor" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="81dp"
            android:background="@color/R1_backgroundColor" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:name="com.example.physio_plus_app.R9.DateFragmentR9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_alignBottom="@+id/view1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            tools:layout="@layout/r9_fragment_month_picker" />


    </RelativeLayout>

    <!-- Footer -->
    <RelativeLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/AccentOrange"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/calendarFootbar"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/r7_footerroundedshape"
            android:contentDescription="@string/goback"
            android:src="@drawable/r7_baseline_calendar_month_24"
            android:text="@string/calendarButton"
            android:title=""
            app:showAsAction="ifRoom"></ImageView>


        <ImageView
            android:id="@+id/addPatientFootbar"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="208dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/r7_footerroundedshape"
            android:contentDescription="@string/goback"
            android:src="@drawable/r7_baseline_euro_24"
            android:text="@string/calendarButton"
            android:title=""
            app:showAsAction="ifRoom"></ImageView>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>