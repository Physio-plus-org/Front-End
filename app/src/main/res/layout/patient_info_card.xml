<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView2"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:layout_margin="30dp"
    app:cardBackgroundColor="@color/R4_primaryColor"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline6">
    <!--        app:cardBackgroundColor="@color/primary_color"-->
    <!--        app:cardCornerRadius="20dp"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/textView">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_gravity="center">
        <!--            android:padding="5dp"-->
        <!--            android:paddingLeft="10dp">-->

        <Button
            android:id="@+id/photo_button"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            app:icon="@drawable/r4_profile_icon"
            android:contentDescription="@string/this_is_a_profile_icon4"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="120dp"
            app:iconTint="@color/R4_backgroundColor"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />
        <!--                android:layout_height="wrap_content"-->
        <!--                android:background="#00FFFFFF"-->
        <!--                android:paddingLeft="25dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1">


                <!--                    android:orientation="horizontal"-->
                <!--                    android:paddingTop="10dp">-->


                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="8sp"
                    android:paddingEnd="8sp"
                    android:text="@string/name_surname4"
                    android:textColor="@color/R4_backgroundColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <!--                        android:text="Γιάννης Κονταξής"-->

            </LinearLayout>

            <TextView
                android:id="@+id/ssrn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:text="ssrn"
                android:textColor="@color/R4_backgroundColor"
                android:textSize="11sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:text="@string/address4"
                android:textColor="@color/R4_backgroundColor"
                android:textSize="11sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="8sp"
                android:paddingTop="5dp"
                android:paddingEnd="8sp"
                android:text="@string/date_4"
                android:textColor="@color/R4_backgroundColor"
                android:textSize="11sp"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>