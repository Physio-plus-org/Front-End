<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- Footer -->
    <RelativeLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/PrimaryGreen"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/calendarFootbar"
            android:layout_width="195dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/r7_footerroundedshape"
            android:contentDescription="@string/goback"
            android:src="@drawable/r7_baseline_calendar_month_24"
            android:text="@string/calendarButton"
            android:title=""
            app:showAsAction="ifRoom"></ImageView>


        <ImageView
            android:id="@+id/addPatientFootbar"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/r7_footerroundedshape"
            android:contentDescription="@string/goback"
            android:src="@drawable/r7_baseline_person_24"
            android:text="@string/calendarButton"
            android:title=""
            app:showAsAction="ifRoom"></ImageView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>