<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_PSF.Facilities_details">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/psf_topbarmenu">

            </include>

            <LinearLayout
                android:id="@+id/code_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbar"

                    android:layout_width="match_parent"
                    android:layout_height="192dp">

                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:contentScrim="?attr/colorPrimary"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"

                        app:toolbarId="@+id/toolbar">

                        <ImageView
                            android:id="@+id/app_bar_image"
                            android:layout_width="match_parent"
                            android:layout_height="449dp"
                            android:contentDescription="@string/r2_backgroud_image"

                            android:scaleType="centerCrop"
                            android:src="@drawable/r2_physio"
                            app:layout_collapseMode="parallax" />

                    </com.google.android.material.appbar.CollapsingToolbarLayout>

                </com.google.android.material.appbar.AppBarLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textStyle="italic" />






        </LinearLayout>



    </ScrollView>

    <include
        android:id="@+id/include"
        layout="@layout/psf_botbarmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"></include>


    <ImageButton
        android:id="@+id/addPSF_Button"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/r5_add_button"
        android:backgroundTint="@color/black"
        android:contentDescription="@string/add_new_psf"
        android:onClick="myButtonClickHandler"
        android:src="@drawable/r7_baseline_add_24"

        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white" />



</androidx.constraintlayout.widget.ConstraintLayout>