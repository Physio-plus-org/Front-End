<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/AccentOrange"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/r7_footerroundedshape"
            android:contentDescription="footer_button"
            android:minHeight="49dp"
            app:srcCompat="@drawable/r7_baseline_calendar_month_24" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:background="@drawable/r7_footerroundedshape"
            android:contentDescription="footer_button"
            android:minHeight="49dp"
            app:srcCompat="@drawable/r7_baseline_euro_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>